{
    "comments": false,
    "presets": [
        "@babel/preset-env",
        "@babel/typescript"
    ],
    "targets": {
        "node": 14,
        "browsers": [ "> 2%" ]          // target modern browsers and ES6
    },
    "env": {
        "development": {
            "comments": true,           // for debugging
            "plugins": [ "istanbul" ]   // for code coverage
        },
        "docs": {
            "comments": true            // for jsdocs
        },
        "production": {
            // stricter target for final browser bundle (more compatibility)
            "targets": {
                "node": 14,
                "browsers": [
                    "> 2%",
                    "ie 11",
                    "not op_mini all"
                ]
            }
        }
    }
}